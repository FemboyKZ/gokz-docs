{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "jsx": "preserve",
    "types": ["vitepress/client"],

    "paths": {
      "@/*": ["./docs/*"],
      "@theme/*": ["./.vitepress/theme/*"],
    }
  },

  "include": ["docs/**/*", "components/**/*", ".vitepress/**/*"]
}
